{
  "expo": {
    "name": "Golf Companion",
    "slug": "golf-companion",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/golf-logo.png",
    "assetBundlePatterns": [
      "**/*"
    ],
    "scheme": "golfcompanion",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "buildNumber": "1", // iOS build number
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app needs access to your microphone for voice chat.",
        "NSCameraUsageDescription": "This app may need access to your camera for video features.",
        "NSPhotoLibraryUsageDescription": "This app may need access to your photo library."
      },
      "bundleIdentifier": "com.anonymous.golfcompanion"
    },
    "android": {
      "versionCode": 1, // Android version code
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/golf-logo.png",
        "backgroundColor": "#003b23"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.anonymous.golfcompanion",
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyDc_Fjev9H5OlUY228wrGz8q4x2y_kMX4k"
        }
      },
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "RECORD_AUDIO",
        "INTERNET",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",

      [
        "expo-splash-screen",
        {
          "image": "./assets/images/golf-logo.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#003b23"
        }
      ],

      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "We need your location to drop tee/fairway/green pins.",
          "locationWhenInUsePermission": "We need your location to drop tee/fairway/green pins."
        }
      ],

      [
        "react-native-permissions",
        {
          "permissions": {
            "ios": [
              "Camera",
              "Microphone",
              "PhotoLibrary"
            ],
            "android": [
              "android.permission.ACCESS_FINE_LOCATION",
              "android.permission.ACCESS_COARSE_LOCATION"
            ]
          }
        }
      ],

      "expo-secure-store",
      [
        "expo-dev-launcher",
        {
          "launchMode": "most-recent"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "f1e2b1b6-cf14-4bd6-8b9f-c1d4f9e17203"
      },
      "supabaseUrl": "https://emgqdjhbmkjepbjdpnmh.supabase.co/",
